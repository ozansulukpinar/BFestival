@using BFest.Model
@{
    ViewBag.Title = "Login";
}
@model User




<div class="single-welcome-slide bg-img bg-overlay jarallax" style="height:auto;background-image:url(img/bg-img/Festival.jpg);">

    <img src="~/Assets/img/bg-img/Festival.jpg" />

    <div class="container h-100">
        <div class="row h-100 align-items-center">
            <!-- Welcome Text -->
            <div class="col-4">
                @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post))
                {
                    <fieldset>
                        <p>
                            <label style="color:white;" class="mt-15">Email Adresi</label>
                            @Html.TextBoxFor(x => x.Email, new { placeholder = "Email adresi giriniz", @class = "form-control" })
                        </p>

                        <p><input type="submit" name="name" value="Gönder" class="btn btn-success" /></p>
                    </fieldset>
                }
            </div>
        </div>
    </div>
</div>