@using BFest.Model
@{
    ViewBag.Title = "Login";
}
@model User




<div class="single-welcome-slide bg-img bg-overlay jarallax" style="height:auto;background-image:url(img/bg-img/Festival.jpg);">

    <img src="~/Assets/img/bg-img/Festival.jpg" />

    <div class="container h-100">
        <div class="row h-100 align-items-center">
            <!-- Welcome Text -->
            <div class="col-4">
                @using (Html.BeginForm())
                {
                    @Html.TextBoxFor(x => x.ID, new { @type="hidden" })
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <fieldset>
                        <p>
                            <label style="color:white;" class="mt-15">Tc No:</label>
                            @Html.TextBoxFor(x => x.TCNo, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.TCNo, "", new { @class = "text-danger" })
                        </p>
                        <p>
                            <label style="color:white;">İsim:</label>
                            @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                        </p>
                        <p>
                            <label style="color:white;">Soyisim:</label>
                            @Html.TextBoxFor(x => x.Surname, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Surname, "", new { @class = "text-danger" })
                        </p>
                        <p>
                            <label style="color:white;">Email:</label>
                            @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                        </p>
                        <p>
                            <label style="color:white;">Şifre:</label>
                            @Html.TextBoxFor(x => x.Password, new { @class = "form-control", type = "password" })
                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                        </p>
                        <p>
                            <label style="color:white;">Telefon:</label>
                            @Html.TextBoxFor(x => x.Phone, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
                        </p>
                        <p>
                            <input type="submit" name="name" value="Kaydet" class="btn btn-success" />

                        </p>
                    </fieldset>
                }
            </div>
        </div>
    </div>
</div>
