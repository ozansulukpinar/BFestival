@using BFest.Model
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
@model User


<link href="~/Bootstrap/css/bootstrap.min.css" rel="stylesheet" />





<body background="~/Bootstrap/meadow-4320155_960_720.jpg">
    <center>


        <div>
            <div class="form-group">
                <h3 class="animated swing delay-2s" style="font-size:x-large">
                    Giriş Ekranı
                </h3>
                <div class="pb-lg-5" style="font-size:x-large;">
                    @using (Html.BeginForm("Login", "Admin", FormMethod.Post))
                    {
                        <fieldset>
                            <p>
                                <label>İsim</label>
                                @Html.TextBoxFor(x => x.Name, new { @class = "form-control", style = "font-size:x-large" })
                            </p>
                            <p>
                                <label>Şifre</label>
                                @Html.TextBoxFor(x => x.Password, new { @class = "form-control", type = "password", style = "font-size:x-large" })
                            </p>
                            <p>
                                @*<button type="submit" value="Sign In" class="btn btn-primary" style="font-size:x-large">Giriş</button>*@
                                <input type="submit" name="name" value="Giriş" class="btn btn-success" style="font-size:x-large" />
                            </p>
                        </fieldset>
                    }
                </div>
                <div class="panel-footer">
                    @if (ViewBag.Error != null)
                    {
                        <span>@ViewBag.Error</span>
                    }
                </div>


            </div>
        </div>

        <script src="~/Bootstrap/js/bootstrap.min.js"></script>
    </center>
</body>



